<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.typhoon.cryptocompare.cryptocompareapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.typhoon.cryptocompare.cryptocompareapp.Cryptocompareapp"
        android:theme="@style/AppTheme">
        <activity android:name="com.typhoon.cryptocompare.cryptocompareapp.presentation.main.MainActivity" />
        <activity android:name="com.typhoon.cryptocompare.cryptocompareapp.presentation.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.typhoon.cryptocompare.cryptocompareapp.presentation.details.DetailsActivity"></activity>
    </application>

</manifest>